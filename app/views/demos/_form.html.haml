.clearfix
  = f.label :author, t("activerecord.attributes.demo.author", :default => "Author"), :class => :label
  .input
    = f.text_field :author, :class => 'text_field', :hint => "add github account!"
.clearfix
  = f.label :link, t("activerecord.attributes.demo.link", :default => "Link"), :class => :label
  .input
    = f.text_field :link, :class => 'text_field', :hint => "add some link like: '/charts/tetris_bar'"
.clearfix
  = f.label :description, t("activerecord.attributes.demo.description", :default => "Description"), :class => :label
  .input
    = f.text_area :description, :class => 'text_area'

.form-actions
  %button{:class => "btn primary", :type => "submit"} Save
  or
  = link_to "Cancel", demos_path
